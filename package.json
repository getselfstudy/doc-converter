  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/@getselfstudy/doc-converter"
  },
  "author": {
    "name": "Tom Newbern",
    "email": "tom.newbern@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/@getselfstudy/doc-converter/issues"
  },
